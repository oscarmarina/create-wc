{
  "compilerOptions": {
    // https://humanwhocodes.com/snippets/2020/10/create-typescript-declarations-from-javascript-jsdoc/
    "target": "es2021",
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*.js"]
}
