{
  "name": "<%= nameSpace %><%= tagName %>",
  "version": "1.0.0-rc.1",
  "description": "Webcomponent <%= tagName %> following open-wc recommendations",
  "keywords": [
    "lit",
    "web-component",
    "lit-element"
  ],
  "author": "<%= tagName %>",
  "license": "MIT",
  "customElements": "custom-elements.json",
  "type": "module",
  "scripts": {
    "start": "concurrently -k -r \"npm:sass:watch\" \"npm:vite\"",
    "vite": "vite",
    "dev:vite": "vite build",
    "preview:vite": "vite preview",
    "analyze": "cem analyze --litelement --globs \"{src,define}/**/*.{js,ts}\" \"index.js\"",
    "sort:package": "npx sort-package-json",
    "postinstall": "npm run sort:package",
    "prepare": "husky install"
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@blockquote/cem-to-markdown-readme": "^1.0.0",
    "@blockquote/coverage-table-reporter": "^1.2.0",
    "@blockquote/rollup-plugin-total-bundlesize": "^2.1.1",
    "@blockquote/sass-style-template": "^3.0.2",
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@ungap/global-this": "^0.4.4",
    "@web/rollup-plugin-html": "^2.1.2",
    "concurrently": "^8.2.2",
    "rollup-plugin-copy": "^3.5.0",
    "sort-package-json": "^2.6.0",
    "ts-lit-plugin": "^2.0.1",
    "vite": "^5.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
