{
  "name": "<%= nameSpace %><%= tagName %>",
  "version": "1.0.0-rc.1",
  "description": "Webcomponent <%= tagName %> following open-wc recommendations",
  "keywords": [
    "lit",
    "web-component",
    "lit-element"
  ],
  "author": "<%= tagName %>",
  "license": "MIT",
  "customElements": "custom-elements.json",
  "type": "module",
  "scripts": {
    "start": "concurrently -k -r \"npm:vite\" \"npm:sass:watch\"",
    "vite": "vite",
    "dev:vite": "vite build",
    "preview:vite": "vite preview",
    "analyze": "cem analyze --litelement --globs \"src/**/*.{js,ts}\" \"index.js\"",
    "sort:package": "npx sort-package-json",
    "postinstall": "npm run sort:package",
    "prepare": "husky"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@blockquote/cem-to-markdown-readme": "^1.0.0",
    "@blockquote/coverage-table-reporter": "^1.2.0",
    "@blockquote/rollup-plugin-externalize-source-dependencies": "^1.0.0",
    "@blockquote/rollup-plugin-total-bundlesize": "^2.1.2",
    "@blockquote/sass-style-template": "^4.1.0",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "rollup-plugin-copy": "^3.5.0",
    "concurrently": "^9.1.0",
    "sort-package-json": "^2.12.0",
    "vite": "^6.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
